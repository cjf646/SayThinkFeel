                id: btn
                on_press:root.displayResult()

                background_color: 0, 0, 1, 1
                text:"Start"
            Label:

        GridLayout:
            cols:3
            height: root.height * 0.5
            Label:
            Label:
            Label:
            Button:
                size_hint: 1, 0.5
                text:"Home"
            Button:
                text:"Stats"
            Button:
                text:"Account"