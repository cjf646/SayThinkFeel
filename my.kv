        size:root.width - 4, root.height - 4
        pos:2, 2
        GridLayout:
            cols:1
            Image:
                source:'youfirst.png'
        GridLayout:
            cols:1
            Label:
                id:timer
                text:""
            Label:
                id:input
                text:"input: "

            Label:
                id:input2
                text:"sentiment: "
